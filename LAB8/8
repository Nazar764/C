#include <stdio.h>
#include <string.h>

int main() {
    char sentence[100]; // Припустимо, що речення має довжину не більше 100 символів
    char shortestWord[20]; // Припустимо, що найкоротше слово має довжину не більше 20 символів

    printf("Введіть речення: ");
    fgets(sentence, sizeof(sentence), stdin);

    char *token = strtok(sentence, " "); // Розділяємо речення на слова за пробілами
    if (token != NULL) {
        strcpy(shortestWord, token); // Ініціалізуємо найкоротше слово першим словом з речення
    }

    while ((token = strtok(NULL, " ")) != NULL) {
        if (strlen(token) < strlen(shortestWord)) {
            strcpy(shortestWord, token); // Оновлюємо найкоротше слово, якщо знайдено слово коротше
        }
    }

    printf("Найкоротше слово: %s\n", shortestWord);

    return 0;
}
