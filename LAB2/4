#include <stdio.h>

int main() {
    // Оголошення змінних для довжини сторони трикутника та висоти
    float side_length, height;

    // Запит користувача на введення довжини сторони трикутника та висоти
    printf("Введіть довжину сторони трикутника: ");
    scanf("%f", &side_length);
    printf("Введіть довжину висоти, опущеної на цю сторону: ");
    scanf("%f", &height);

    // Обчислення площі трикутника
    float area = 0.5 * side_length * height;

    // Виведення площі на екран
    printf("Площа трикутника: %.2f\n", area);

    return 0;
}
