#include <stdio.h>

int main() {

    float side_length, height;

    // Запит користувача
    printf("Введіть довжину сторони трикутника: ");
    scanf("%f", &side_length);
    printf("Введіть довжину висоти, опущеної на цю сторону: ");
    scanf("%f", &height);

    // Обчислення площі
    float area = 0.5 * side_length * height;

    // Виведення площі
    printf("Площа трикутника: %.2f\n", area);

    return 0;
}
